generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String     @default(uuid()) @id         
  username    String     @unique                      
  email       String     @unique                      
  password    String     
  following   User[]     @relation("userFollows")
  followedBy  User[]     @relation("userFollows")
  created     DateTime   @default(now())
  picture     String                                  
}
